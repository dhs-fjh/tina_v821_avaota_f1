					"lcd_width": "<60>",
					"lcd_height": "<100>",
					"lcd_dclk_freq": "<71>",
					"lcd_hbp": "<23>",
					"lcd_ht": "<1479>",
					"lcd_hspw": "<2>",
					"lcd_vbp": "<8>",
					"lcd_vt": "<870>",
					"lcd_vspw": "<2>",
					"lcd_pwm_used": "<0>",
					"lcd_frm": "<0>",
					"lcd_hv_clk_phase": "<1>",
					"lcd_hv_sync_polarity": "<0>",
					"lcd_hv_srgb_seq": "<10>",
					"lcd_gpio_0": "<&pio PD 17 GPIO_ACTIVE_LOW>",
					"lcd_gpio_1": "<&pio PD 15 GPIO_ACTIVE_LOW>",
					"lcd_gpio_2": "<&pio PD 16 GPIO_ACTIVE_LOW>",
